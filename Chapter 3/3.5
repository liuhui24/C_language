#include<stdio.h>
int main(void)
{
    int n=0,nums[16];
    printf("Enter tne numbers from 1 to 16 in any order:\n");
    for(int i=0;i<16;++i)
    {
        scanf("%d",&nums[i]);
    }
    for(int i=0;i<16;++i)
    {
        printf("%2d   ",nums[i]);
        n++;
        if(n%4==0) printf("\n");
    }
    printf("Rows sums: %d %d %d %d\n",nums[0]+nums[1]+nums[2]+nums[3],nums[4]+nums[5]+nums[6]+nums[7],nums[8]+nums[9]+nums[10]+nums[11],nums[12]+nums[13]+nums[14]+nums[15]);
    printf("Column sums: %d %d %d %d\n",nums[0]+nums[4]+nums[8]+nums[12],nums[1]+nums[5]+nums[9]+nums[13],nums[2]+nums[6]+nums[10]+nums[14],nums[3]+nums[9]+nums[11]+nums[15]);
    printf("Diagonal sums: %d %d",nums[0]+nums[5]+nums[10]+nums[15],nums[3]+nums[6]+nums[9]+nums[12]);

    return 0;
}
