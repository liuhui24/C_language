#include<stdio.h>
int main(void)
{
    float loan,rate,payment,remainder1,remainder2,remainder3;
    printf("Enter amount of loan: ");
    scanf("%f",&loan);
    printf("Enter interest rate: ");
    scanf("%f",&rate);
    printf("Enter monthly payment: ");
    scanf("%f",&payment);
    remainder1 = loan - payment + loan * rate/1200;
    remainder2 = remainder1 - payment + remainder1 * rate/1200;
    remainder3 = remainder2 - payment + remainder2 * rate/1200;
    printf("Balance remaining after first payment: $%.2f\n",remainder1);
    printf("Balance remaining after scecond payment: $%.2f\n",remainder2);
    printf("Balance remaining after third payment: $%.2f\n",remainder3);
    return 0;
}
